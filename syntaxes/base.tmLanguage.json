{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "B@SE",
    "foldingStartMarker": "\\[%[^/].*%]",
    "foldingStopMarker": "\\[%\/.*%]",
    "patterns": [
        {
            "include": "text.html.basic"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#variables"
        },
        {
            "name": "meta.function.base",
            "begin": "\\[%",
            "end": "%]",
            "patterns": [
                {
                    "name": "entity.name.function",
                    "begin": "\\.",
                    "end": "\\s",
                    "patterns": []
                },
                {
                    "include": "#constants"
                },
                {
                    "include": "#variables"
                }
            ]
        }
    ],
    "repository": {
        "constants": {
            "name": "support.constant.base",
            "begin": "\\[@config:",
            "end": "@]",
            "patterns": []
        },
        "variables": {
            "name": "support.variable.base",
            "begin": "\\[@",
            "end": "@]",
            "patterns": []
        }
    },
    "scopeName": "text.html.base"
}